include  ../common/mixins
header.header
	.header__top
		.header__left
			.socials
				-var items = {'vk':'https://new.vk.com/id151078387','github':'https://github.com/Muxacuk','in':'https://www.linkedin.com/in/%D0%BC%D0%B8%D1%85%D0%B0%D0%B8%D0%BB-%D0%B8%D0%B7%D0%BC%D0%B0%D0%B9%D0%BB%D0%BE%D0%B2-a5ba64119?trk=nav_responsive_tab_profile_pic'};
				ul.socials__list
					each val,index in items
						li.socials__item
							a(href="#{val}" target="_blank").socials__link
								+icon(index,"")
		.header__right
			a(href="#").nav-trigger
				-for(var i=0; i<3; i++)
					i.nav-trigger__icon
	.header__center
		img(src="img/my_photo.jpg", alt="Измайлов Михаил").header__center-img
		h1.header__title Измайлов Михаил
		span.header__subtext Личный сайт frontend разработчика
	.header__bottom
		a(href="#" data-target="about").header__scroll-button.scroll-button
			+icon('arrow_down','')